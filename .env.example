# Shopping Agent MCP Server Configuration

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# DuckDuckGo search settings
SEARCH_MAX_RESULTS=10
SEARCH_REGION=wt-wt

# Playwright settings
HEADLESS=true
BROWSER_TIMEOUT=30000

# Demo mode (uses mock data instead of real scraping)
# Set to false to enable actual Playwright-based scraping
DEMO_MODE=true

# Kroger API credentials (required for discover_product tool)
# Get credentials at https://developer.kroger.com/
KROGER_CLIENT_ID=
KROGER_CLIENT_SECRET=

# Optional: Kroger store location ID for local pricing/availability
KROGER_LOCATION_ID=

# Optional: Kroger API environment ("production" or "ce" for certification)
KROGER_ENV=production
